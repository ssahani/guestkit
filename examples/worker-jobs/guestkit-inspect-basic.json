{
  "$schema": "https://guestkit.dev/schemas/job-v1.json",
  "version": "1.0",
  "job_id": "inspect-basic-001",
  "created_at": "2026-01-30T16:00:00Z",
  "kind": "VMOperation",
  "operation": "guestkit.inspect",

  "metadata": {
    "name": "basic-vm-inspection",
    "labels": {
      "environment": "test"
    }
  },

  "execution": {
    "timeout_seconds": 600,
    "priority": 5
  },

  "payload": {
    "type": "guestkit.inspect.v1",
    "data": {
      "image": {
        "path": "/vms/test-vm.qcow2",
        "format": "qcow2",
        "read_only": true
      },
      "options": {
        "deep_scan": false,
        "include_packages": true,
        "include_services": true,
        "include_network": true,
        "include_security": true
      },
      "output": {
        "format": "json",
        "destination": "/tmp/inspect-result.json"
      }
    }
  }
}
