{
  "$schema": "https://guestkit.dev/schemas/job-v1.json",
  "version": "1.0",
  "job_id": "profile-security-001",
  "created_at": "2026-01-30T16:00:00Z",
  "kind": "VMOperation",
  "operation": "guestkit.profile",

  "metadata": {
    "name": "security-compliance-scan",
    "namespace": "security",
    "labels": {
      "environment": "prod",
      "scan-type": "security",
      "compliance": "pci-dss"
    }
  },

  "execution": {
    "idempotency_key": "security-scan-db-01-2026-01-30",
    "timeout_seconds": 900,
    "priority": 9
  },

  "payload": {
    "type": "guestkit.profile.v1",
    "data": {
      "image": {
        "path": "/vms/prod-db-01.qcow2",
        "format": "qcow2"
      },
      "profiles": [
        "security",
        "compliance",
        "hardening"
      ],
      "options": {
        "severity_threshold": "medium",
        "fail_on_critical": true,
        "include_remediation": true
      },
      "output": {
        "format": "json",
        "destination": "/tmp/security-profile.json",
        "include_remediation": true
      }
    }
  }
}
